<div
  class="list-banner"
  style="background-image: url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')"
>
  <div class="d-flex flex-column justify-content-center align-items-center h-100">
    <h1 class="text-white"><%= @list.name %></h1>
  </div>
</div>

<div class="d-flex justify-content-center align-items-start">
  <div class="list-info d-flex flex-column">
    <div class="my-2 d-flex flex-row-reverse">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addBookmarkModal">
        Add bookmark
      </button>
    </div>

    <div class="row gx-5 bg-light">
      <% if @list.bookmarks.length == 0 %>
        <p>There are no bookmarks</p>
      <% else %>
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card border col-4 p-3">
            <img src= <%= bookmark.movie.poster_url %> class="bookmark-image">
            <h3 class="bookmark-header"><%= "#{bookmark.movie.title} - #{bookmark.movie.rating}â˜†" %></h3>
            <p class="bookmark-info"><%= bookmark.movie.overview %></p>
            <div class="d-flex justify-content-between">
              <p class="bookmark-info">
                <strong><i class="fa-solid fa-quote-left"></i></strong>
                <em><%= bookmark.comment %></em>
              </p>
              <%= link_to "Delete",
                list_bookmark_path(@list, bookmark),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "delete-button"
              %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<hr>

<div>
  <h2>Reviews on this list</h2>
  <%%>
  <%= link_to "Add a Review",
    new_list_review_path(params[:id]),
    class: "btn btn-primary"
  %>
</div>

<!-- Modal -->
<div class="modal fade" id="addBookmarkModal" tabindex="-1" aria-labelledby="addBookmarkModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addBookmarkModalLabel">Add new bookmark</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "/bookmarks/form", bookmark: @bookmark %>
      </div>
    </div>
  </div>
</div>
